# ============================================
# DEPLOYMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# === GROQ API (Required for AI Features) ===
# Get your free API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Groq Model Selection (default: llama-3.3-70b-versatile)
# Options: llama-3.3-70b-versatile, llama-3.1-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=llama-3.3-70b-versatile

# Groq Timeout (seconds)
GROQ_TIMEOUT=30

# === Database (Railway PostgreSQL) ===
DATABASE_URL=postgresql://user:password@host:port/dbname

# === Server Configuration ===
PORT=8000
ENVIRONMENT=production

# === CORS Settings ===
# Add your Streamlit Cloud URL here after deployment
ALLOWED_ORIGINS=https://your-streamlit-app.streamlit.app,http://localhost:8501

# === Shopify OAuth (Optional - for future features) ===
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret

# === Rate Limiting ===
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600
RATE_LIMIT_BLOCK_DURATION=300
